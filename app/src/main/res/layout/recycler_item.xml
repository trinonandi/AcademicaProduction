<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/recycler_item_background"
    android:layout_marginBottom="6dp"
    >

    <TextView
        android:id="@+id/item_key_textView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/classRoll"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/blue_accent_custom"
        android:padding="6dp"/>
    <TextView
        android:id="@+id/item_name_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/blue_gray_custom"
        android:padding="6dp"
        android:layout_marginStart="4dp"
        android:gravity="center"/>


</LinearLayout>