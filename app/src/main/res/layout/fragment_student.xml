<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student.StudentRegistrationFragment"
    android:orientation="vertical"
    android:layout_gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="639dp"
        android:layout_gravity="center"

        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="40dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        android:background="@drawable/reg_form_background"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/studentReg_name_editText"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/open_sans"
            android:hint="@string/name"
            android:textColor="@color/blue_gray_custom"
            android:textColorHint="@color/blue_gray_custom"
            app:boxStrokeColor="@color/blue_gray_custom"
            app:endIconMode="clear_text"
            app:endIconTint="@color/blue_gray_custom"
            app:hintTextColor="@color/blue_gray_custom"
            app:layout_constraintBottom_toTopOf="@+id/studentReg_pwd_editText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/blue_gray_custom"

                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/studentReg_pwd_editText"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/open_sans"

            android:hint="@string/password"
            android:textColor="@color/blue_gray_custom"
            android:textColorHint="@color/blue_gray_custom"
            app:boxStrokeColor="@color/blue_gray_custom"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/blue_gray_custom"
            app:hintTextColor="@color/blue_gray_custom"
            app:layout_constraintBottom_toTopOf="@+id/studentReg_email_editText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/studentReg_name_editText">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textColor="@color/blue_gray_custom"
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/studentReg_email_editText"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/open_sans"
            android:hint="@string/email"
            android:textColor="@color/blue_gray_custom"
            android:textColorHint="@color/blue_gray_custom"
            app:boxStrokeColor="@color/blue_gray_custom"
            app:endIconMode="clear_text"
            app:endIconTint="@color/blue_gray_custom"
            app:hintTextColor="@color/blue_gray_custom"
            app:layout_constraintBottom_toTopOf="@+id/studentReg_univRoll_editText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/studentReg_pwd_editText">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/blue_gray_custom"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/studentReg_univRoll_editText"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/open_sans"
            android:hint="@string/university_roll"
            android:textColor="@color/blue_gray_custom"
            android:textColorHint="@color/blue_gray_custom"
            app:boxStrokeColor="@color/blue_gray_custom"
            app:endIconMode="clear_text"
            app:endIconTint="@color/blue_accent_custom"
            app:hintTextColor="@color/blue_gray_custom"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/studentReg_email_editText">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/blue_gray_custom"/>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/linearLayout12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/studentReg_univRoll_editText">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/studentReg_sem_editText"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:hint="@string/sem"
                android:textColorHint="@color/blue_gray_custom"
                app:boxStrokeColor="@color/blue_gray_custom"
                app:endIconMode="clear_text"
                app:endIconTint="@color/blue_gray_custom"
                app:hintTextColor="@color/blue_gray_custom">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/blue_gray_custom"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@id/studentReg_classRoll_editText"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:hint="@string/classRoll"
                android:textColorHint="@color/blue_gray_custom"
                app:boxStrokeColor="@color/blue_gray_custom"
                app:endIconMode="clear_text"
                app:endIconTint="@color/blue_gray_custom"
                app:hintTextColor="@color/blue_gray_custom"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/blue_gray_custom"/>

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/studentReg_reg_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout12">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@id/studentReg_authId_editText"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:hint="@string/auth_id"
                android:textColorHint="@color/blue_gray_custom"
                app:boxStrokeColor="@color/blue_gray_custom"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/blue_gray_custom"
                app:hintTextColor="@color/blue_gray_custom">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:textColor="@color/blue_gray_custom"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/studentReg_dept"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="140dp"
                android:layout_height="68dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/open_sans"
                android:text="@string/dept"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/blue_gray_custom"
                android:textSize="16sp"
                app:rippleColor="@color/blue_ripple_custom"
                app:strokeColor="@color/blue_gray_custom" />
        </LinearLayout>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/studentReg_reg_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="100dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/blue_accent_custom"
            android:fontFamily="@font/bubblegum_sans"
            android:gravity="center"
            android:src="@drawable/ic_register_icon"
            android:text="@string/register"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:cornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/reg_instruction"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout11" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/reg_instruction"


            android:layout_width="114dp"
            android:layout_height="31dp"


            android:layout_marginStart="54dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/bubblegum_sans"
            android:padding="0dp"
            android:text="@string/reg_instruction"
            android:textAlignment="center"
            android:textColor="@color/blue_accent_custom"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/studentReg_reg_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout11"
            app:layout_constraintVertical_bias="0.544" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>