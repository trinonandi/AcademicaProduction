<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="20dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/admin_createSession_dialog_roll"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="327dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:boxStrokeColor="@color/blue_gray_custom"
        android:textColorHint="@color/blue_gray_custom"
        app:hintTextColor="@color/blue_gray_custom"
        android:layout_marginBottom="30dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/classRoll" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/admin_createSession_dialog_name"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="327dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_createSession_dialog_roll"
        app:layout_constraintVertical_bias="0.167"
        app:boxStrokeColor="@color/blue_gray_custom"
        android:textColorHint="@color/blue_gray_custom"
        app:hintTextColor="@color/blue_gray_custom"
        android:layout_marginBottom="40dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/name" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_createSession_dialog_name"
        app:layout_constraintVertical_bias="0.34">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/admin_createSession_dialog_closeBtn"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/open_sans"
            android:text="Close"
            android:textColor="@color/blue_accent_custom"
            android:textStyle="bold"
            app:rippleColor="@color/blue_ripple_custom"
            app:strokeColor="@color/blue_accent_custom" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/admin_createSession_dialog_addBtn"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginStart="35dp"
            android:backgroundTint="@color/blue_accent_custom"
            android:fontFamily="@font/open_sans"
            android:text="Add"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:rippleColor="@color/blue_ripple_custom"
            app:strokeColor="@color/blue_accent_custom" />
    </LinearLayout>

</LinearLayout>