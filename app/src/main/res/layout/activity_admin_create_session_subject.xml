<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/student_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/student_main_drawer"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/blue_accent_custom"
                app:title="Create Subjects"
                app:titleTextColor="@color/white"
                />
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="716dp"
            android:layout_marginTop="75dp"
            app:layout_anchor="@+id/constraintLayout2"
            app:layout_anchorGravity="center">

            <LinearLayout

                android:id="@+id/linearLayout4"
                android:layout_width="355dp"
                android:layout_height="77dp"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal"
                android:padding="10dp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.39"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/admin_createSessionSubject_deptBtn"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"

                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/open_sans"
                    android:padding="10dp"
                    android:text="@string/dept"
                    android:textColor="@color/blue_gray_custom"
                    android:textStyle="bold"
                    app:rippleColor="@color/blue_ripple_custom"
                    app:strokeColor="@color/blue_gray_custom" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/admin_createSessionSubject_semBtn"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"

                    android:fontFamily="@font/open_sans"
                    android:padding="10dp"

                    android:text="@string/sem"
                    android:textColor="@color/blue_gray_custom"
                    android:textStyle="bold"
                    app:rippleColor="@color/blue_ripple_custom"
                    app:strokeColor="@color/blue_gray_custom" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="70dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/admin_createSessionSubject_recyclerView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/admin_createSessionSubject_closeBtn"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/open_sans"
                    android:text="Close"
                    android:textColor="@color/blue_accent_custom"
                    android:textStyle="bold"
                    app:rippleColor="@color/blue_ripple_custom"
                    app:strokeColor="@color/blue_accent_custom" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/admin_createSessionSubject_addBtn"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/open_sans"
                    android:onClick="addSubject"
                    android:text="Add"
                    android:textColor="@color/blue_accent_custom"
                    android:textStyle="bold"
                    app:rippleColor="@color/blue_ripple_custom"
                    app:strokeColor="@color/blue_accent_custom" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/admin_createSessionSubject_submitBtn"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/blue_accent_custom"
                    android:fontFamily="@font/open_sans"
                    android:onClick="submitAllData"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:rippleColor="@color/blue_ripple_custom"
                    app:strokeColor="@color/blue_accent_custom" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/admin_createSessionSubject_recyclerView"
                android:layout_width="370dp"
                android:layout_height="438dp"
                android:layout_marginTop="201dp"
                android:background="@color/white"
                android:padding="5dp"
                android:scrollbars="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/student_home_progressBar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#8DFFFFFF"
            android:elevation="10dp"
            android:visibility="gone">
            <ProgressBar
                android:id="@+id/student_home_progressBar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:indeterminateTint="@color/blue_accent_custom"
                />
        </RelativeLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView

        android:id="@+id/student_Nav_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/student_drawer"

        />


</androidx.drawerlayout.widget.DrawerLayout>