<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/student_drawer_attendance"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/student_attendance_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/blue_accent_custom"
                app:title="Profile"
                app:titleTextColor="@color/white" />
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="0dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_account_identity_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.469"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.15" />

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.35"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingTop="12dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/blue_accent_custom"
                    >
                </TextView>
                <TextView
                    android:id="@+id/student_profile_name_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:fontFamily="@font/open_sans"
                    android:textSize="18sp"
                    android:paddingTop="12dp"
                    android:layout_marginStart="20dp"
                    android:textStyle="bold">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.45">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/email"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingTop="12dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/blue_accent_custom"
                    >
                </TextView>
                <TextView
                    android:id="@+id/student_profile_email_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:fontFamily="@font/open_sans"
                    android:textSize="18sp"
                    android:paddingTop="12dp"
                    android:layout_marginStart="20dp"
                    android:textStyle="bold">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.55">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/university_roll"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingTop="12dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/blue_accent_custom"
                    >
                </TextView>

                <TextView
                    android:id="@+id/student_profile_univRoll_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:fontFamily="@font/open_sans"
                    android:textSize="18sp"
                    android:paddingTop="12dp"
                    android:layout_marginStart="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout

                android:id="@+id/linearLayout2"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.65"
                android:fontFamily="@font/open_sans"
                android:textSize="18sp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/dept"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingTop="12dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/blue_accent_custom"
                    >
                </TextView>

                <TextView
                    android:id="@+id/student_profile_dept_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:fontFamily="@font/open_sans"
                    android:textSize="18sp"
                    android:paddingTop="12dp"
                    android:layout_marginStart="20dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.75"
                android:textSize="18sp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/classRoll"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingTop="12dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/blue_accent_custom"
                    >
                </TextView>

                <TextView
                    android:id="@+id/student_profile_classRoll_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:fontFamily="@font/open_sans"
                    android:textSize="18sp"
                    android:paddingTop="12dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="40dp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.85"
                android:textSize="18sp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/sem"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingTop="12dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/blue_accent_custom"
                    >
                </TextView>

                <TextView
                    android:id="@+id/student_profile_sem_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:fontFamily="@font/open_sans"
                    android:textSize="18sp"
                    android:paddingTop="12dp"
                    android:layout_marginStart="20dp"
                    android:textStyle="bold"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.96">

                <com.google.android.material.button.MaterialButton
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="155dp"
                    android:layout_height="60dp"
                    android:contentDescription="@string/edit_profile"
                    android:text="Reset Password"
                    android:textAlignment="center"
                    android:textColor="@color/blue_accent_custom"
                    android:fontFamily="@font/open_sans"
                    app:strokeColor="@color/blue_accent_custom"
                    android:textAllCaps="false"
                    android:layout_marginEnd="10dp"
                    app:rippleColor="@color/blue_ripple_custom"/>

                <com.google.android.material.button.MaterialButton
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="155dp"
                    android:layout_height="60dp"
                    android:contentDescription="@string/edit_profile"
                    android:text="@string/edit_profile"
                    android:textAlignment="center"
                    android:textColor="@color/blue_accent_custom"
                    app:icon="@drawable/ic_baseline_edit_24"
                    app:iconTint="@color/blue_accent_custom"
                    android:fontFamily="@font/open_sans"
                    app:strokeColor="@color/blue_accent_custom"
                    android:textAllCaps="false"
                    app:rippleColor="@color/blue_ripple_custom"
                    />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView

        android:id="@+id/student_AllNav_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/studentallnavmenu" />
</androidx.drawerlayout.widget.DrawerLayout>
